{
  "$schema": "./gen/schemas/config.schema.json",
  "productName": "Clype",
  "version": "1.0.0",
  "identifier": "com.clype.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg", "appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "English"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false
      },
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "hardenedRuntime": true
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "longDescription": "Privacy-first real-time communication platform with voice, video, and chat",
    "shortDescription": "Secure real-time communication",
    "category": "SocialNetworking"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Clype",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "center": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Dark",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "acceptFirstMouse": false,
        "tabbingIdentifier": null,
        "additionalBrowserArgs": "--enable-features=VaapiVideoDecoder,VaapiVideoEncoder --disable-features=UseChromeOSDirectVideoDecoder",
        "dragDropEnabled": false,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:3000 http://localhost:8080 ws://localhost:8080 wss://localhost:8080 https://*.clype.com wss://*.clype.com https://accounts.google.com https://oauth2.googleapis.com https://www.googleapis.com; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval' https://accounts.google.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https: http:; media-src 'self' blob: mediastream:; font-src 'self' data:; frame-src https://accounts.google.com"
    },
    "macOSPrivateApi": false,
    "withGlobalTauri": true
  },
  "plugins": {
    "shell": {
      "open": "^https://accounts\\.google\\.com/.*|^https://oauth2\\.googleapis\\.com/.*"
    },
    "deepLink": {
      "desktop": {
        "schemes": ["clype"]
      }
    },
    "updater": {
      "active": false,
      "endpoints": [
        "https://releases.clype.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": ""
    }
  }
}